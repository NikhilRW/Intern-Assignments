<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.ToDoList" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/myBlue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here -->

        <!-- Example of other theme attributes you might want to include -->
        <!-- <item name="android:windowBackground">@color/white</item> -->
        <!-- <item name="android:textColorPrimary">@color/black</item> -->
        <!-- <item name="android:textColorSecondary">@color/dark_grey</item> -->
    </style>

    <!-- Theme without ActionBar -->
    <style name="Theme.ToDoList.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Custom style for AlertDialog -->
    <style name="CustomAlertDialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:textColorPrimary">#0087D7</item>
        <item name="android:textColor">#0087D7</item>
    </style>

    <!-- AppBarOverlay style -->
    <style name="Theme.ToDoList.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- SpinnerStyle -->
    <style name="SpinnerStyle">
        <!-- Optional: Set dropdown item selector -->
        <item name="android:dropDownSelector">@color/white</item>
        <!-- Optional: Set dropdown item style -->
        <!-- <item name="android:background">@drawable/spinner_background</item> -->
    </style>

    <!-- PopupOverlay style -->
    <style name="Theme.ToDoList.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
