<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mesh5">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="70dp"
        android:layout_height="65dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024"
        app:srcCompat="@drawable/roundlogo" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="380dp"
        android:layout_height="595dp"
        android:background="@drawable/roundedcorners"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="50dp"
        android:paddingBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.569">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archivo"
            android:paddingBottom="50dp"
            android:text="User Registered Successfully"
            android:textAlignment="center"
            android:textColor="#08B8CF"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nameresult"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textColorHint="#42A5F5"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/usernameresult"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#2196F3"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/emailresult"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:textColor="#000000"
            android:textColorHint="#2196F3"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/genderresult"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:inputType="text"
            android:shadowColor="#000000"
            android:textColor="#000000"
            android:textColorHint="#2196F3"
            android:textSize="34sp" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="71dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/exit"
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:background="@drawable/roundedbtn"
                android:fontFamily="@font/fredoka_one"
                android:text="Exit"
                android:textColorLink="#26A69A"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>